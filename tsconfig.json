{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2020",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
